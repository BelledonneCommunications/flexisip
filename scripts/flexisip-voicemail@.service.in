[Unit]
Description=Flexisip Voicemail server - %i instance
Documentation=https://www.linphone.org/en/flexisip-sip-server/
Wants=network-online.target
After=syslog.target network.service network.target network-online.target

[Service]
Type=forking
ExecStart=/opt/belledonne-communications/bin/flexisip --server voicemail --daemon --syslog --pidfile /var/run/flexisip-voicemail/%i.pid -c /etc/flexisip/%i.conf

[Install]
WantedBy=multi-user.target
