###############################################################################
# Dockerfile used to make gitlab.linphone.org:4567/bc/public/flexisip/bc-dev-ubuntu-22-04:20260114_upgrade_gcc_clang
###############################################################################

FROM ubuntu:22.04

MAINTAINER Anthony Gauchy <anthony.gauchy@belledonne-communications.com>

# Add repo for newer gcc
RUN apt-get -y update \
    && apt-get -y install software-properties-common \
    && add-apt-repository -y ppa:ubuntu-toolchain-r/test

# Install common tools
RUN apt-get -y install sudo \
                       vim \
                       wget \
                       file \
                       curl \
                     # Install development tools
                       ccache \
                       cmake \
                       doxygen \
                       elfutils \
                       gcc-13 \
                       g++-13 \
                       gdb \
                       git \
                       llvm \
                       make \
                       ninja-build \
                       python3 \
                       python3-pip \
                       yasm \
                     # Install all dependencies needed for Flexisip
                       libssl-dev \
                       libboost-dev \
                       libboost-system-dev \
                       libboost-thread-dev \
                       libhiredis-dev \
                       libjansson-dev \
                       libjsoncpp-dev \
                       libsqlite3-dev \
                       libpq-dev \
                       libmariadb-dev \
                       libmariadb-dev-compat \
                       mariadb-server \
                       libnghttp2-dev \
                       libsnmp-dev \
                       libxerces-c-dev \
                       libsrtp2-dev \
                       libgsm1-dev \
                       libopus-dev \
                       libmbedtls-dev \
                       libspeex-dev \
                       libspeexdsp-dev \
                       libxml2-dev \
                       redis-server \
                     # Dependencies of the B2BUA
                       libvpx-dev \
  # Clean
 && apt-get -y autoremove \
 && apt-get -y clean

# Install newer clang
RUN wget https://apt.llvm.org/llvm.sh \
    && chmod +x llvm.sh \
    && ./llvm.sh 21

# Update gcc and clang alternatives
RUN update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-13 10 \
    && update-alternatives --install /usr/bin/g++ g++ /usr/bin/g++-13 10 \
    && update-alternatives --install /usr/bin/clang clang /usr/bin/clang-21 10 \
    && update-alternatives --install /usr/bin/clang++ clang++ /usr/bin/clang++-21 10

# Install libnghttp2_asio 1.43.0
COPY libnghttp2_asio_install.sh .
RUN ./libnghttp2_asio_install.sh 1.43.0 && rm libnghttp2_asio_install.sh

# Configure user bc
RUN useradd -ms /bin/bash bc && \
    echo 'bc:cotcot' | chpasswd && \
    echo 'bc ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Switch for 'bc' user
USER bc
WORKDIR /home/bc

# Install python3 modules.
# This must be done as 'bc' user because some python modules are installed into /usr/local/lib when pip is invoked
# as root, and rpmbuild prevent python from seaching its modules in this prefix. Using 'bc' user make the python
# modules to be installed into /home/bc/.local/bin.
RUN python3 -m pip install --user pystache six
ENV PATH=$PATH:/home/bc/.local/bin

# CVE-2022-24765, from git 2.35.2 onward
RUN git config --global --add safe.directory *
